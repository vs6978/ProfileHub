<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Document</title>
</head>
<body>
    <div class="w-full min-h-screen bg-zinc-900 text-white p-10">
        <div>
            <a class="bg-red-500 rounded-md px-3 py-2 text-sm mb-5 inline-block" href="/logout">Logout</a>

        </div>
        <h3 class="text-3xl">Hello <%=user.name%> </h3>
        <h5 class="mb-5">You can create a new post</h5>
        <form method="post" action="/post">
            <textarea placeholder="Write what's on your mind?" class="p-3 outline-none w-1/3 resize-none bg-transparent border-2 border-zinc-800 rounded-md block" name="content"></textarea>
            <input class=" px-3 w-40 py-3 bg-blue-500 block mt-2 rounded-md text-sm" type="submit" value="Create new post">
        </form>
        <div class="posts mt-20">
            <h3 class="text-zinc-400">Your Posts</h3>
            <div class="postcontainer">
                <% user.posts.forEach(function(post){ %>
                <div class="post w-1/3 p-4 mb-4 bg-zinc-800 border-[1px] border-zinc-600">
                    <h4 class="text-blue-500 mb-2">@<%=user.username%></h4>
                    <p class="text-sm tracking-tight "><%=post.content%></p>
                    <small class="mt-2 inline-block"><%=post.likes.length%></small>
                    <div class="btns flex gap-4 mt-1">
                        <a class="text-blue-500" href="/like/<%=post._id%>"><%= post.likes.indexOf(user._id)===-1?"Like":"Unlike"%>  </a>
                        <a class="text-zinc-500" href="/edit/<%=post._id%>">Edit</a>
                    </div>
                </div>
                <% })%>
            </div>
        </div>

    </div>

</body>
</html>